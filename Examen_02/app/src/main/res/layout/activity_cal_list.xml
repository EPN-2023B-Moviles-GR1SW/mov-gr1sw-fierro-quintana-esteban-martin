<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalListActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reporte de Notas"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estudiante:"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/tv_est"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Estudiante1"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <Button
        android:id="@+id/btn_nueva_cal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear nuevo"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btn_update_cal_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizar Calificaciones"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/tv_exep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="sadasd"
        android:gravity="center"
        android:textSize="20sp"/>

    <ListView
        android:id="@+id/lv_cal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_gravity="center_horizontal"/>

</androidx.appcompat.widget.LinearLayoutCompat>